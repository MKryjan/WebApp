extends layout
block header
      header.header
        #divHeader
          .container#cssmenu
              ul#menuList
                li#start
                  a(href='http://localhost:3000/index.pug') Start
                li#day
                  a(href='http://localhost:3000/diary') Dziennik
                li#diet
                  a(href='') Dieta
                li#browser
                  a(href='http://localhost:3000/products') Wyszukaj produkt
        script(src='typeahead.min.js' type='text/javascript')
      #unlog
        input( id='unlogButton' type='submit', value='Wyloguj')
        script.
            $(document).ready(function(e){
            $('#typeaheadInp').typeahead({
            name: 'Type your Query',
            remote: 'http://localhost:3000/search?key=%QUERY',
            limit: 10
            });
            });
block content
  #search
    input#typeaheadInp(type='text' name='typeahead' autocomplete='off' spellcheck='false' placeholder='Type your Query')
    input#buttonBrowse( type='submit', value='Szukaj')